<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Reset Password</title>
    <script>
        var status  = "<%- JSON.stringify(status) %>"
        if(JSON.parse(status)== "Verified"){
            if(confirm("Do u want to login?")){
                window.location.href="http://localhost:3000/"
            }
        }

</script>

    <style>
        body {
            margin: 0;
            padding: 0;
            font-family: 'Arial', sans-serif;
            background-color: #282c34;
            color: #fff;
        }

        section {
            display: flex;
            justify-content: center;
            align-items: center;
            height: 100vh;
        }

        #card {
            width: 300px;
            background-color: #fff;
            border-radius: 10px;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
            padding: 20px;
            box-sizing: border-box;
        }

        #resetPasswordForm label {
            display: block;
            margin-top: 10px;
            color: black;
        }

        #resetPasswordForm input {
            width: 100%;
            padding: 8px;
            margin-top: 5px;
            box-sizing: border-box;
        }

        #resetPasswordForm button {
            margin-top: 15px;
            padding: 10px;
            background-color: #007bff;
            color: #fff;
            cursor: pointer;
            border: none;
            border-radius: 5px;
        }

        #resetPasswordForm button:hover {
            background-color: #0056b3;
        }
    </style>
</head>
<body>
    <section>
        <div id="card">
            <h2 style="text-align: center; margin-bottom: 20px; color:black">Reset Password</h2>

            <!-- reset-password.hbs -->

          <form action="" method="post" style="text-align: left" id="resetPasswordForm">

    <label for="newPassword">New Password:</label>
    <input type="password" id="newPassword" name="newPassword" required />

    <label for="confirmPassword">Confirm Password:</label>
    <input type="password" id="confirmPassword" name="confirmPassword" required />

    <button type="submit">Reset Password</button>
</form>


            <!-- Link to go back to login page -->
            <p>Remember your password? <a href="/login">Login</a></p>
        </div>
    </section>
</body>
</html>
